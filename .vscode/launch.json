// A launch configuration that compiles the extension and then opens it inside a new window
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Language Server E2E Test",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--disable-extensions",
				"--extensionDevelopmentPath=${workspaceRoot}",
				"--extensionTestsPath=${workspaceRoot}/server/out/test/suite/index",
				"${workspaceRoot}/server/test/suite"
			],
			"outFiles": [
				"${workspaceRoot}/client/out/test/**/*.js"
			],
			"preLaunchTask": "npm: test-compile"
		},
		{
			"name": "Language extensionHost",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--disable-extensions",
				"--extensionDevelopmentPath=${workspaceRoot}",
				"--extensionTestsPath=${workspaceRoot}/server/out/test/suite/index",
				"${workspaceRoot}/server/test/suite"
			],
			"outFiles": [
				"${workspaceRoot}/client/out/test/**/*.js"
			],
			"preLaunchTask": "npm: test-compile"
		},
		{
            "name": "test server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/server/node_modules/mocha/bin/_mocha",
            "stopOnEntry": true,
            "args": [
				"-r", "ts-node/register",
				"--reporter", "spec",
				"--recursive",
				"--extension ts",
                "--no-timeouts",
                "test\\test-parser.ts"
            ],
            "cwd": "${workspaceRoot}/server",
            "runtimeExecutable": null,
            "env": {
                "NODE_ENV": "testing"
            }
        }
	]
}